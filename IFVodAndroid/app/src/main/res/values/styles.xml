<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@mipmap/splash_background</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
    </style>

    <style name="tab_text_normal_16" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tab_text_normal" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tab_text_bold" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_style" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="right_dialog_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/right_in</item>
        <item name="android:windowExitAnimation">@anim/right_out</item>
    </style>

    <style name="BarrageEditDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item><!--显示软件盘-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="VipDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="switchStyle" parent="Theme.AppCompat.Light">
        <item name="thumbTint">@color/switch_thumb_selector</item>
        <item name="trackTint">@color/switch_track_selector</item>
        <item name="showText">false</item>
    </style>

    <style name="anthology_tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="upper_tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>


    <!--正常按钮样式-->
    <style name="button_style_normal">
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_shape_solid_1_corners_4</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
    </style>

    <!--举报按钮样式-->
    <style name="button_style_report" parent="AppTheme">
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_report_dialog_selector</item>
        <item name="android:textColor">@color/button_report_text_color_selector</item>
    </style>

    <!--屏蔽关键词输入框发送按钮样式-->
    <style name="button_style_input_key_word" parent="AppTheme">
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_input_key_word_selector</item>
        <item name="android:textColor">@color/button_report_text_color_selector</item>
    </style>


    <!--发表按钮样式-->
    <style name="button_style_publish">
        <item name="android:layout_height">28dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_shape_solid_1_corners_2</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
    </style>

    <!--立即播放按钮样式-->
    <style name="button_style_play_now">
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_shape_solid_2</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!--下载按钮样式-->
    <style name="button_style_download">
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_shape_solid_3</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <!--开通VIP按钮样式-->
    <style name="button_style_open_vip_36">
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_shape_solid_4</item>
        <item name="android:textColor">@color/word_open_vip</item>
    </style>

    <!--开通VIP按钮样式-->
    <style name="button_style_open_vip_24">
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_shape_solid_9</item>
        <item name="android:textColor">@color/word_open_vip</item>
    </style>

    <!--继续播放按钮样式-->
    <style name="button_style_continue_playing">
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_shape_solid_5</item>
        <item name="android:textColor">@color/word_continue_playing</item>
    </style>

    <!--圆角按钮-->
    <style name="button_round_style">
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_shape_round</item>
        <item name="android:textColor">@color/word_continue_playing</item>
    </style>

    <!--VIP详情按钮样式-->
    <style name="button_style_vip_details">
        <item name="android:layout_height">28dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_shape_solid_6</item>
        <item name="android:textColor">@color/word_color_2</item>
    </style>

    <!--关注按钮样式-->
    <style name="button_style_attention_28">
        <item name="android:layout_height">28dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_shape_solid_7</item>
        <item name="android:textColor">@color/button_attention_text_color_selector</item>
    </style>

    <!--关注按钮样式-->
    <style name="button_style_attention_24">
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_shape_solid_7</item>
        <item name="android:textColor">@color/button_attention_text_color_selector</item>
    </style>

    <!--回复按钮样式-->
    <style name="button_style_reply">
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_shape_solid_6</item>
        <item name="android:textColor">@color/word_color_5</item>
    </style>

    <!--续费按钮样式-->
    <style name="button_style_renew">
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_shape_solid_10</item>
        <item name="android:textColor">@color/word_renew</item>
    </style>

    <!--搜索结果页子模块底部更多按钮样式-->
    <style name="button_style_search_more">
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_shape_solid_11</item>
        <item name="android:textColor">@color/word_color_4</item>
    </style>

    <!--浅色白，深色和主题色一致-->
    <style name="line_light_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider_main_tab_color</item>
    </style>

    <style name="tab_fill_style">
        <item name="android:layout_width">match_parent</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">@color/button_normal_start</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabPaddingStart">9dp</item>
        <item name="tabPaddingEnd">9dp</item>
        <item name="tabPaddingTop">0dp</item>
        <item name="tabRippleColor">@color/transparent</item>
        <item name="tabSelectedTextColor">@color/word_color_2</item>
        <item name="tabTextAppearance">@style/tab_text_normal</item>
        <item name="tabSelectedTextAppearance">@style/tab_text_bold</item>
        <item name="tabTextColor">@color/grey</item>
    </style>

    <style name="tab_center_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">@color/button_normal_start</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabPaddingStart">9dp</item>
        <item name="tabPaddingEnd">9dp</item>
        <item name="tabPaddingTop">0dp</item>
        <item name="tabRippleColor">@color/transparent</item>
        <item name="tabSelectedTextColor">@color/word_color_2</item>
        <item name="tabTextAppearance">@style/tab_text_normal</item>
        <item name="tabTextColor">@color/grey</item>
    </style>
</resources>

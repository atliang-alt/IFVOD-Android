<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_disable"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/simple_to_traditional"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/word_color_10"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/rg_language_options"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="27dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/follow_system"
            android:layout_width="wrap_content"
            android:button="@drawable/selector_language_switch_button"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="@string/follow_system"
            android:gravity="center"
            android:textColor="@color/word_color_4"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/simple_chinese"
            android:layout_width="wrap_content"
            android:button="@drawable/selector_language_switch_button"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="@string/simple_chinese"
            android:gravity="center"
            android:textColor="@color/word_color_4"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/traditional_chinese"
            android:button="@drawable/selector_language_switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="5dp"
            android:text="@string/traditional_chinese"
            android:gravity="center"
            android:textColor="@color/word_color_4"
            android:textSize="14sp" />
    </RadioGroup>

    <View
        android:id="@+id/horizontalLine"
        style="@style/line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leftButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/grey"
            android:textSize="16sp" />

        <View
            android:id="@+id/verticalLine"
            style="@style/line_style_vertical" />

        <TextView
            android:id="@+id/rightButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ensure"
            android:textColor="@color/light_white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/image_exchange_bg">

    <ImageView
        android:id="@+id/exchange_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/image_exchange_tip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/exchangeCode"
        android:layout_width="275dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/transparent_30_corner_4_bg"
        android:gravity="center"
        android:hint="@string/input_exchange_code"
        android:inputType="textVisiblePassword"
        android:maxLength="8"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white_60"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exchange_tip" />

    <Button
        android:id="@+id/exchangeButton"
        android:layout_width="275dp"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/exchange_button_bg"
        android:enabled="false"
        android:onClick="exchangeVipSubmit"
        android:text="@string/submit"
        android:textColor="@color/exchange_button_text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exchangeCode" />
</androidx.constraintlayout.widget.ConstraintLayout>
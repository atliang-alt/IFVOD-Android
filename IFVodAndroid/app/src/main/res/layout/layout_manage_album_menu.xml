<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_6"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="15dp">

    <TextView
        android:id="@+id/editAlbum"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableStart="@mipmap/icon_edit_40"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="@string/editAlbum"
        android:textColor="@color/word_color_2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/batchManagement"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableStart="@mipmap/icon_manage"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="@string/batchManagement"
        android:textColor="@color/word_color_2"
        android:textSize="14sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/albumSort"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableStart="@mipmap/icon_sort"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="@string/sort"
        android:textColor="@color/word_color_2"
        android:textSize="14sp"
        android:visibility="gone"/>
</LinearLayout>
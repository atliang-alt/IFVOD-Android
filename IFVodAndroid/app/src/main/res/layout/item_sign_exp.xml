<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemExpLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/sign_exp_bg_selector"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemExpValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/taskValue"
            android:textColor="@color/sign_exp_value_text_selector"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/itemExpDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="4dp"
        android:text="@string/days"
        android:textColor="@color/sign_exp_text_selector"
        android:textSize="12sp" />
</LinearLayout>
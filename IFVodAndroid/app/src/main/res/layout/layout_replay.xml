<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/image_player_thumb"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/completeTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="@string/vip_film_complete_tips"
        android:textColor="@color/grey_4"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/replay"
        android:layout_width="wrap_content"
        android:layout_height="36sp"
        android:layout_centerInParent="true"
        android:background="@drawable/button_shape_solid_5"
        android:drawableLeft="@mipmap/icon_little_play"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:text="@string/replay"
        android:textColor="@color/grey_4"
        android:textSize="14sp" />
</LinearLayout>
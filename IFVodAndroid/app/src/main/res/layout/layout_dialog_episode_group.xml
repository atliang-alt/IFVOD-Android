<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_3"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:text="@string/video_show"
        android:textColor="@color/word_color_2"
        android:textSize="14sp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/group_tab"
        style="@style/tab_fill_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tabSelectedTextColor="@color/switch_thumb_checked"
        app:tabTextAppearance="@style/tab_text_normal_16"
        app:tabTextColor="@color/word_color_2" />

    <View style="@style/line_style" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/group_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:weightSum="6">

    <LinearLayout
        android:id="@+id/wechat_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:tag="@string/wechat">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/button_shape_solid_14"
            android:scaleType="center"
            android:src="@mipmap/icon_weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/wechat"
            android:textColor="@color/word_color_3"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weibo_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:tag="@string/weibo">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/button_shape_solid_14"
            android:scaleType="center"
            android:src="@mipmap/icon_weibo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/weibo"
            android:textColor="@color/word_color_3"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qq_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:tag="@string/qq">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/button_shape_solid_14"
            android:scaleType="center"
            android:src="@mipmap/icon_qq" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/qq"
            android:textColor="@color/word_color_3"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/facebook_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:tag="@string/fackbook">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/button_shape_solid_14"
            android:scaleType="center"
            android:src="@mipmap/icon_facebook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/fackbook"
            android:textColor="@color/word_color_3"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/twitter_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:tag="@string/twitter">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/button_shape_solid_14"
            android:scaleType="center"
            android:src="@mipmap/icon_twitter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/twitter"
            android:textColor="@color/word_color_3"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/copy_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/button_shape_solid_14"
            android:scaleType="center"
            android:src="@mipmap/icon_copy_link" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/copy"
            android:textColor="@color/word_color_3"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
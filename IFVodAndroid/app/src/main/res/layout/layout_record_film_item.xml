<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <CheckBox
        android:id="@+id/item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/check_box_normal_selector"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/video_item_bg">

        <ImageView
            android:id="@+id/image_film"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:background="@color/background_4" />

        <TextView
            android:id="@+id/item_update"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_gravity="end"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:background="@drawable/red_rectangle_bg"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/watch_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:max="100"
            android:progressDrawable="@drawable/progress_dp1"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/film_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/word_color_2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/film_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/content_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/film_watch_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/film_progress_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textSize="11sp" />

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/filterContainer"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/filterComprehensive"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/blue_transparent_selector"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="@string/comprehensive"
            android:textColor="@color/word_color_3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/filterPlayMore"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/blue_transparent_selector"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="@string/playMore"
            android:textColor="@color/word_color_3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/filterNewRelease"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/blue_transparent_selector"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="@string/newRelease"
            android:textColor="@color/word_color_3"
            android:textSize="14sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/filterContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/anthologyNumb"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/anthology_item_bg_corner_2"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="1"
        android:textColor="@color/anthology_item_text_color_selector"
        android:textSize="14sp" />

    <com.cqcsy.library.views.SVGView
        android:id="@+id/playerImage"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:antiAlias="true"
        app:autoPlay="true" />

    <ImageView
        android:id="@+id/vipImage"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="end"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/red_circle_bg"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/status_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="5dp"
        android:visibility="gone" />
</FrameLayout>
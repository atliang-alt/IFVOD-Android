<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <LinearLayout
            android:id="@+id/noAttentionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noAttentionTips"
                android:textColor="@color/word_color_2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/recommendTips"
                android:textColor="@color/word_color_5"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/attentionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/attentionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/attentionCount"
                android:textColor="@color/word_color_2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lookVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawableEnd="@mipmap/icon_grey_arrow"
                android:drawablePadding="5dp"
                android:text="@string/goToAttentionVideo"
                android:textColor="@color/grey"
                android:textSize="14sp" />
        </RelativeLayout>
    </FrameLayout>

    <View style="@style/line_style" />
</LinearLayout>
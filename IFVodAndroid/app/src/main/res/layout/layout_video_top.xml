<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/video_top_title_bg"
    android:minHeight="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="12dp"
        android:scaleType="center"
        android:src="@mipmap/icon_back_white" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/screenShare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:paddingRight="12dp"
            android:src="@mipmap/icon_share"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/screenOption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:paddingRight="12dp"
            android:src="@mipmap/icon_player_option"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/screenUpload"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:paddingRight="12dp"
            android:src="@mipmap/icon_screen_upload"
            android:visibility="gone" />

        <com.cqcsy.lgsp.video.view.BatteryView
            android:id="@+id/batteryView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>